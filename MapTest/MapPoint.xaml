<UserControl x:Class="MapTest.MapPoint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mapTest="clr-namespace:MapTest"
             mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type mapTest:Cluster}">
            <TextBlock Text="{Binding Path=Name}" FontWeight="Bold" FontSize="16" FontStyle="Italic" ToolTip="{Binding Path=Points.Count}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type mapTest:Point}">
            <TextBlock Text="{Binding Path=Name}" />
        </DataTemplate>
    </UserControl.Resources>
    <ContentControl Content="{Binding}" />
</UserControl>